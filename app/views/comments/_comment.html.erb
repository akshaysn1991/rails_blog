<div class="comment clearfix">
  <div class="comment_content">
    <p class="comment_name"><strong><%= comment.name.upcase %></strong></p>
    <p class="comment_body"><%= comment.body %></p>
    <p class="comment_time"><%= time_ago_in_words(comment.created_at) %> Ago</p>
  </div>
  <% if user_signed_in? %>
    <p class='delete'><%= link_to 'Delete', [comment.post, comment], method: :delete, data: {conform: 'Are you sure?'}, :class => "btn btn-danger btn-sm pull-right" %></p>
  <% end %>
  <hr>
</div>