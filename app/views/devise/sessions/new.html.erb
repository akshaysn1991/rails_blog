<div id="page_wrapper">
  <h2><center>Log in</center></h2>
  <hr>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

   <div class="form-horizontal">
    <div class="form-group">
        <%= f.label :email, 'Email:', class:'control-label col-md-2 col-md-offset-1' %>
        <div class="col-md-6">
             <!-- <span class="input-group-addon">@</span> -->
            <%= f.text_field :email, class:'form-control', placeholder:'Email', required: true, autofocus: true %>

        </div>

    </div>

  <div class="form-group">
        <%= f.label :password, 'Password:', class:'control-label col-md-2 col-md-offset-1' %>
        <div class="col-md-6">
             <!-- <span class="input-group-addon">@</span> -->
            <%= f.password_field :password, class:'form-control', placeholder:'Password', required: true, autofocus: true, autocomplete: 'off' %>

        </div>

    </div>



    <% if devise_mapping.rememberable? -%>


      <div class="form-group">
        <%= f.label :remember_me, 'Remember me:', class:'control-label col-md-2 col-md-offset-1' %>
        <div class="col-md-1">
             <!-- <span class="input-group-addon">@</span> -->
            <%= f.check_box :remember_me, class:'form-control'%>

        </div>

    </div>

    <% end -%>

     <div class="form-group">

             <div class="col-md-2 col-md-offset-3">
            <%= f.submit "Log in", class:'btn btn-info' %>
        </div>
    </div>
  </div>
  <% end %>

 <%#= render "devise/shared/links" %>
</div>